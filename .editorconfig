# User 标识此.editorconfig文件是用户级别的根配置文件
root = true

# [*] 匹配所有类型的文件

# 使用空格作为缩进样式
indent_style = space

# 设置缩进大小为2个空格
indent_size = 2

# 使用 LF（Unix风格的换行符）
end_of_line = lf

# 设置文件编码为 UTF-8
charset = utf-8

# 在保存文件时删除行尾的空格
trim_trailing_whitespace = true

# 确保文件末尾插入一个空白行
insert_final_newline = true

# [*.md] 匹配所有扩展名为.md的Markdown文件

# 对于Markdown文件，不删除行尾的空格
trim_trailing_whitespace = false